{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/provider-response.schema.json",
  "title": "ProviderResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["text", "outputChannel", "runRecord"],
  "properties": {
    "text": {
      "type": "string"
    },
    "outputChannel": {
      "type": "string",
      "enum": ["text", "tool_call"]
    },
    "runRecord": {
      "type": "object",
      "additionalProperties": false,
      "required": ["provider", "model", "latencyMs", "retries", "requestHash"],
      "properties": {
        "provider": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "latencyMs": {
          "type": "number",
          "minimum": 0
        },
        "retries": {
          "type": "integer",
          "minimum": 0
        },
        "requestHash": {
          "type": "string"
        }
      }
    }
  }
}
