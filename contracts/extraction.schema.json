{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/extraction.schema.json",
  "title": "Extraction",
  "type": "object",
  "additionalProperties": false,
  "required": ["extractionClass", "quote", "span", "grounding"],
  "properties": {
    "extractionClass": {
      "type": "string"
    },
    "quote": {
      "type": "string"
    },
    "span": {
      "$ref": "./span.schema.json"
    },
    "attributes": {
      "type": "object"
    },
    "grounding": {
      "type": "string",
      "enum": ["explicit", "inferred"]
    }
  }
}
