{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/extraction.schema.json",
  "title": "Extraction",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "extractionClass",
    "quote",
    "offsetMode",
    "charStart",
    "charEnd",
    "span",
    "grounding"
  ],
  "properties": {
    "extractionClass": {
      "type": "string"
    },
    "quote": {
      "type": "string"
    },
    "offsetMode": {
      "type": "string",
      "enum": ["utf16_code_unit"]
    },
    "charStart": {
      "type": "integer",
      "minimum": 0
    },
    "charEnd": {
      "type": "integer",
      "minimum": 0
    },
    "span": {
      "$ref": "./span.schema.json"
    },
    "attributes": {
      "type": "object"
    },
    "grounding": {
      "type": "string",
      "enum": ["explicit", "inferred"]
    }
  }
}
