{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/evidence-bundle.schema.json",
  "title": "EvidenceBundle",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "bundleVersion",
    "runId",
    "program",
    "extractions",
    "provenance",
    "normalizationLedger",
    "shardPlan",
    "diagnostics"
  ],
  "properties": {
    "bundleVersion": {
      "type": "string",
      "const": "1"
    },
    "runId": {
      "type": "string"
    },
    "program": {
      "$ref": "./program.schema.json"
    },
    "extractions": {
      "type": "array",
      "items": {
        "$ref": "./extraction.schema.json"
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["documentId", "textHash", "runtime", "createdAt", "programHash"],
      "properties": {
        "documentId": {
          "type": "string"
        },
        "textHash": {
          "type": "string"
        },
        "runtime": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "version"],
          "properties": {
            "name": {
              "type": "string",
              "enum": ["node", "deno", "bun", "workers", "browser"]
            },
            "version": {
              "type": "string"
            }
          }
        },
        "createdAt": {
          "type": "string"
        },
        "programHash": {
          "type": "string"
        }
      }
    },
    "normalizationLedger": {
      "type": "object",
      "additionalProperties": false,
      "required": ["steps"],
      "properties": {
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["step", "mappingStrategy", "lossy", "beforeLength", "afterLength"],
            "properties": {
              "step": {
                "type": "string",
                "enum": ["normalizeNewlines", "trimTrailingWhitespacePerLine"]
              },
              "mappingStrategy": {
                "type": "string",
                "enum": ["not_reversible"]
              },
              "lossy": {
                "type": "boolean"
              },
              "beforeLength": {
                "type": "integer",
                "minimum": 0
              },
              "afterLength": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        }
      }
    },
    "shardPlan": {
      "type": "object",
      "additionalProperties": false,
      "required": ["chunkSize", "overlap", "shardCount"],
      "properties": {
        "chunkSize": {
          "type": "integer",
          "minimum": 1
        },
        "overlap": {
          "type": "integer",
          "minimum": 0
        },
        "shardCount": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "diagnostics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "emptyResultKind",
        "shardOutcomes",
        "failures",
        "checkpointHits",
        "promptLog",
        "budgetLog",
        "multiPassLog",
        "repairLog"
      ],
      "properties": {
        "emptyResultKind": {
          "type": "string",
          "enum": ["non_empty", "empty_by_evidence", "empty_by_failure"]
        },
        "checkpointHits": {
          "type": "integer",
          "minimum": 0
        },
        "failures": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/shardFailure"
          }
        },
        "shardOutcomes": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/shardOutcomeSuccess"
              },
              {
                "$ref": "#/$defs/shardOutcomeFailure"
              }
            ]
          }
        },
        "promptLog": {
          "type": "object",
          "additionalProperties": false,
          "required": ["programHash", "shardPromptHashes"],
          "properties": {
            "programHash": {
              "type": "string"
            },
            "shardPromptHashes": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["shardId", "promptHash"],
                "properties": {
                  "shardId": {
                    "type": "string"
                  },
                  "promptHash": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "budgetLog": {
          "type": "object",
          "additionalProperties": false,
          "required": ["time", "retry", "repair"],
          "properties": {
            "time": {
              "type": "object",
              "additionalProperties": false,
              "required": ["timeBudgetMs", "deadlineReached", "startedAtMs", "deadlineAtMs"],
              "properties": {
                "timeBudgetMs": {
                  "type": ["integer", "null"],
                  "minimum": 0
                },
                "deadlineReached": {
                  "type": "boolean"
                },
                "startedAtMs": {
                  "type": "integer",
                  "minimum": 0
                },
                "deadlineAtMs": {
                  "type": ["integer", "null"],
                  "minimum": 0
                }
              }
            },
            "retry": {
              "type": "object",
              "additionalProperties": false,
              "required": ["attempts", "baseDelayMs", "maxDelayMs", "jitterRatio"],
              "properties": {
                "attempts": {
                  "type": "integer",
                  "minimum": 1
                },
                "baseDelayMs": {
                  "type": "number",
                  "minimum": 0
                },
                "maxDelayMs": {
                  "type": "number",
                  "minimum": 0
                },
                "jitterRatio": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            },
            "repair": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "maxCandidateChars",
                "maxRepairChars",
                "candidateCharsTruncatedCount",
                "repairCharsTruncatedCount"
              ],
              "properties": {
                "maxCandidateChars": {
                  "type": ["integer", "null"],
                  "minimum": 1
                },
                "maxRepairChars": {
                  "type": ["integer", "null"],
                  "minimum": 1
                },
                "candidateCharsTruncatedCount": {
                  "type": "integer",
                  "minimum": 0
                },
                "repairCharsTruncatedCount": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            }
          }
        },
        "multiPassLog": {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode", "maxPasses", "shards"],
          "properties": {
            "mode": {
              "type": "string",
              "const": "draft_validate_repair_finalize"
            },
            "maxPasses": {
              "type": "integer",
              "minimum": 1
            },
            "shards": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["shardId", "maxPasses", "finalPass", "stages"],
                "properties": {
                  "shardId": {
                    "type": "string"
                  },
                  "maxPasses": {
                    "type": "integer",
                    "minimum": 1
                  },
                  "finalPass": {
                    "type": "integer",
                    "minimum": 0
                  },
                  "stages": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["pass", "stage", "status", "failureKind", "message"],
                      "properties": {
                        "pass": {
                          "type": "integer",
                          "minimum": 0
                        },
                        "stage": {
                          "type": "string",
                          "enum": ["draft", "validate", "repair", "finalize"]
                        },
                        "status": {
                          "type": "string",
                          "enum": ["ok", "error"]
                        },
                        "failureKind": {
                          "type": ["string", "null"],
                          "enum": [
                            "provider_error",
                            "json_pipeline_failure",
                            "payload_shape_failure",
                            "quote_invariant_failure",
                            "budget_exhausted",
                            "unknown_failure",
                            null
                          ]
                        },
                        "message": {
                          "type": ["string", "null"]
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "repairLog": {
          "type": "object",
          "additionalProperties": false,
          "required": ["entries"],
          "properties": {
            "entries": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["shardId", "pass", "parseOk", "changed", "appliedSteps", "budget"],
                "properties": {
                  "shardId": {
                    "type": "string"
                  },
                  "pass": {
                    "type": "integer",
                    "minimum": 0
                  },
                  "parseOk": {
                    "type": "boolean"
                  },
                  "changed": {
                    "type": "boolean"
                  },
                  "appliedSteps": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "stripBOM",
                        "removeAsciiControlChars",
                        "trimOuterJunk",
                        "fixTrailingCommas"
                      ]
                    }
                  },
                  "budget": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                      "maxCandidateChars",
                      "maxRepairChars",
                      "candidateCharsTruncated",
                      "repairCharsTruncated"
                    ],
                    "properties": {
                      "maxCandidateChars": {
                        "type": ["integer", "null"],
                        "minimum": 1
                      },
                      "maxRepairChars": {
                        "type": ["integer", "null"],
                        "minimum": 1
                      },
                      "candidateCharsTruncated": {
                        "type": "boolean"
                      },
                      "repairCharsTruncated": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "attestation": {
      "$ref": "./evidence-attestation.schema.json"
    }
  },
  "$defs": {
    "providerRunRecord": {
      "type": "object",
      "additionalProperties": false,
      "required": ["provider", "model", "latencyMs", "retries", "requestHash"],
      "properties": {
        "provider": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "latencyMs": {
          "type": "number",
          "minimum": 0
        },
        "retries": {
          "type": "integer",
          "minimum": 0
        },
        "requestHash": {
          "type": "string"
        }
      }
    },
    "jsonPipelineLog": {
      "type": "object",
      "additionalProperties": false,
      "required": ["extractedJson", "repair", "parse"],
      "properties": {
        "extractedJson": {
          "type": "object",
          "additionalProperties": false,
          "required": ["found", "start", "end", "kind", "sourceLength", "candidateLength"],
          "properties": {
            "found": {
              "type": "boolean"
            },
            "start": {
              "type": ["integer", "null"],
              "minimum": 0
            },
            "end": {
              "type": ["integer", "null"],
              "minimum": 0
            },
            "kind": {
              "type": ["string", "null"],
              "enum": ["object", "array", null]
            },
            "sourceLength": {
              "type": "integer",
              "minimum": 0
            },
            "candidateLength": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "repair": {
          "$ref": "./repair-log.schema.json"
        },
        "parse": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": false,
              "required": ["ok"],
              "properties": {
                "ok": {
                  "type": "boolean",
                  "const": true
                }
              }
            },
            {
              "type": "object",
              "additionalProperties": false,
              "required": ["ok", "error"],
              "properties": {
                "ok": {
                  "type": "boolean",
                  "const": false
                },
                "error": {
                  "$ref": "./json-parse-error.schema.json"
                }
              }
            }
          ]
        }
      }
    },
    "shardFailure": {
      "type": "object",
      "additionalProperties": false,
      "required": ["shardId", "kind", "message", "retryable", "errorName"],
      "properties": {
        "shardId": {
          "type": "string"
        },
        "kind": {
          "type": "string",
          "enum": [
            "provider_error",
            "json_pipeline_failure",
            "payload_shape_failure",
            "quote_invariant_failure",
            "budget_exhausted",
            "unknown_failure"
          ]
        },
        "message": {
          "type": "string"
        },
        "retryable": {
          "type": "boolean"
        },
        "errorName": {
          "type": "string"
        }
      }
    },
    "shardOutcomeSuccess": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "shardId",
        "start",
        "end",
        "status",
        "fromCheckpoint",
        "attempts",
        "extractions",
        "providerRunRecord",
        "jsonPipelineLog"
      ],
      "properties": {
        "shardId": {
          "type": "string"
        },
        "start": {
          "type": "integer",
          "minimum": 0
        },
        "end": {
          "type": "integer",
          "minimum": 0
        },
        "status": {
          "type": "string",
          "const": "success"
        },
        "fromCheckpoint": {
          "type": "boolean"
        },
        "attempts": {
          "type": "integer",
          "minimum": 0
        },
        "extractions": {
          "type": "array",
          "items": {
            "$ref": "./extraction.schema.json"
          }
        },
        "providerRunRecord": {
          "$ref": "#/$defs/providerRunRecord"
        },
        "jsonPipelineLog": {
          "$ref": "#/$defs/jsonPipelineLog"
        }
      }
    },
    "shardOutcomeFailure": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "shardId",
        "start",
        "end",
        "status",
        "fromCheckpoint",
        "attempts",
        "extractions",
        "failure"
      ],
      "properties": {
        "shardId": {
          "type": "string"
        },
        "start": {
          "type": "integer",
          "minimum": 0
        },
        "end": {
          "type": "integer",
          "minimum": 0
        },
        "status": {
          "type": "string",
          "const": "failure"
        },
        "fromCheckpoint": {
          "type": "boolean"
        },
        "attempts": {
          "type": "integer",
          "minimum": 0
        },
        "extractions": {
          "type": "array",
          "maxItems": 0
        },
        "failure": {
          "$ref": "#/$defs/shardFailure"
        }
      }
    }
  }
}
