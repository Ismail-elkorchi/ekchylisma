{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/provider-config.schema.json",
  "title": "ProviderConfig",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "apiKey": {
      "type": "string"
    },
    "baseUrl": {
      "type": "string"
    },
    "organization": {
      "type": "string"
    },
    "timeoutMs": {
      "type": "integer",
      "minimum": 0
    },
    "retries": {
      "type": "integer",
      "minimum": 0
    }
  }
}
