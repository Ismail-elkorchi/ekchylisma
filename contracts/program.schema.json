{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/program.schema.json",
  "title": "Program",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "description",
    "classes",
    "examples",
    "constraints",
    "instructions",
    "schema",
    "programHash"
  ],
  "properties": {
    "programId": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "classes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "attributesSchema": {
            "type": "object"
          },
          "allowInferred": {
            "type": "boolean"
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["requireExactQuote", "forbidOverlap"],
      "properties": {
        "requireExactQuote": {
          "type": "boolean"
        },
        "forbidOverlap": {
          "type": "boolean"
        },
        "maxExtractionsPerShard": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "instructions": {
      "type": "string"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["input", "output"],
        "properties": {
          "input": {
            "type": "string"
          },
          "output": {
            "type": "array",
            "items": {
              "$ref": "./extraction.schema.json"
            }
          }
        }
      }
    },
    "schema": {
      "type": "object"
    },
    "programHash": {
      "type": "string"
    }
  }
}
